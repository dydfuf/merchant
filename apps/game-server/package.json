{
  "name": "game-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/main.js",
    "start:local": "node dist/src/main.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@repo/infra-firestore": "workspace:*",
    "@repo/rule-engine": "workspace:*",
    "@repo/shared-types": "workspace:*",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/test-fixtures": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.1",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  }
}
